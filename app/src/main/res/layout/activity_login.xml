<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.salil.aroundme.login">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ne"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/e11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginTop="94dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="username"
        android:layout_alignLeft="@+id/imageView2" />

    <EditText
        android:id="@+id/e22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/e1"
        android:layout_below="@+id/e11"
        android:layout_marginTop="23dp"
        android:hint="password"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_alignLeft="@+id/e1" />

    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/e2"
        android:layout_centerVertical="true"
        android:layout_marginStart="39dp"
        android:background="@android:color/holo_blue_dark"
        android:text="login"
        android:onClick="login"
        android:layout_alignLeft="@+id/e2"
        android:layout_marginLeft="39dp" />

    <Button
        android:id="@+id/b2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/b1"
        android:layout_alignBottom="@+id/b1"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/b1"
        android:background="@android:color/holo_purple"
        android:text="register"
        android:onClick="register"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/b1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="LOGIN PAGE"
        android:textColor="@android:color/black"
        android:textSize="30dp" />
</RelativeLayout>
